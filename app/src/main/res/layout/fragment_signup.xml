<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_gradient_bg"
    android:padding="10dp"
    tools:context=".Fragment.SignupFragment">

    <ImageView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter Your First Name"
        android:drawableLeft="@drawable/ic_action_name"
        android:drawablePadding="5dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/et_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter Your Last Name"
        android:drawableLeft="@drawable/ic_action_name"
        android:drawablePadding="5dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter Your Address"
        android:drawableLeft="@drawable/ic_action_address"
        android:drawablePadding="5dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter Your Email Address"
        android:drawableLeft="@drawable/ic_action_email"
        android:drawablePadding="5dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter Your Contact Number"
        android:drawableLeft="@drawable/ic_action_contact"
        android:drawablePadding="5dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/et_un"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Create a Username"
        android:drawableLeft="@drawable/ic_action_username"
        android:drawablePadding="5dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:drawablePadding="5dp"
        android:hint="Create a Password"/>

    <EditText
        android:id="@+id/et_re_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:drawablePadding="5dp"
        android:hint="Re-enter Your Password"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_round"
        android:text="Register"
        android:textColor="#ccc"
        android:textSize="15sp"
        android:textStyle="bold"/>



</LinearLayout>